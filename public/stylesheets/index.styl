body
  background-color black

.services
  width 100%
  height auto
  overflow auto

.services__block
  position relative
  box-sizing border-box
  width 46%
  height 170px
  padding 10px
  margin 2% 0 0 2%
  float left
  background-color #d90000
  text-align center

  .icon--status
    position absolute
    top 10px
    right 10px

  .services__block__logo
    max-width 100%
    height 80%

  .services__block__text
    color white
    font-size .6em
    text-transform uppercase
    letter-spacing .4em
    font-family 'Lato', Helvetica, sans-serif

.success
  background-color #34a802

g > ellipse
  stroke rgba(0,0,0,.3) !important
