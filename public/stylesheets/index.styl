body
  background-color black
  overflow hidden
  font-family 'FS Emeric Book', Helvetica, sans-serif

.services
  width 100%
  height 100vh
  overflow hidden

.services__block
  position relative
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  width 47%
  height 45%
  padding 10px
  margin 2% 0 0 2%
  float left
  background-color #d90000
  text-align center

  .icon--status
    position absolute
    top 10px
    right 10px

  .services__block__logo
    max-width 100%
    height 80%

  .services__block__text
    color white
    font-size .6em
    text-transform uppercase
    letter-spacing .4em

.success
  background-color #34a802

g > ellipse
  stroke rgba(0,0,0,.3) !important
